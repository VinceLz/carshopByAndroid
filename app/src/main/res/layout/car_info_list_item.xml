<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/car_info_list_item_img"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@mipmap/textimg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/car_info_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝马7系"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_info_list_item_models"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领先型"
                android:textColor="#000"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/car_info_list_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="指导价:30万"
                    android:textColor="#999"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/car_info_list_item_guidegprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="参考价:30万"
                    android:textColor="#999"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/car_info_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="全系降价5000"
                android:textColor="#D44960"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/floorprice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="#277640"
                android:text="寻低价"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/bystages" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="#D72B62"
                android:text="分期政策"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_info_online_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/online_buy_car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="在线订车"
                android:textColor="#3672B0"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>