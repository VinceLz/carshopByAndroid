<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/shop_car_img"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@mipmap/textimg"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/shop_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝马7系2017款730li"
                android:textSize="18sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/shop_car_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领先型"
                android:textSize="18sp"
                android:textColor="#000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/shop_car_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="指导价:70万"
                    android:textColor="#999"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/shop_car_uidegprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="参考价:70万"
                    android:textSize="12sp"
                    android:textColor="#999"/>
            </LinearLayout>

            <TextView
                android:id="@+id/shop_car_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全系降价5000"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="#D44960"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/floorprice"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="20sp"
                android:textColor="#298332"
                android:text="询底价"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/bystages"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="20sp"
                android:textColor="#CE0034"
                android:text="分期政策"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/online"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="20sp"
                android:textColor="#3E79D3"
                android:text="在线订车"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>