<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_online"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical"
    tools:context="com.car.contractcar.myapplication.activity.CarOnlineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#42A4B2"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.car.contractcar.myapplication.ui.EduSohoIconView
            android:id="@+id/car_online_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fback"
            android:textColor="#fff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            android:text="在线订车"
            android:textColor="#fff"
            android:textSize="25sp"/>
        <com.car.contractcar.myapplication.ui.EduSohoIconView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fmore"
            android:textColor="#fff" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fff"
        android:padding="10dp"
        android:src="@mipmap/exhibition_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/car_online_car_img"
            android:layout_width="80dp"
            android:layout_height="55dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <com.car.contractcar.myapplication.ui.AlwaysMarqueeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_online_car_name"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:padding="5dp"
                android:text="2016款本田思域"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="购车后享受2年合约养车政策"
                android:textColor="#E06414"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:src="@mipmap/jiujiu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="2dp"
                android:maxLines="1"
                android:text="定金随时可退"
                android:textColor="#E06414"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>


    <!-- 车身颜色 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车身颜色"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/car_color1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/myedtext_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/car_color1_img"
                    android:layout_margin="3dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/car_color1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/car_color2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/myedtext_style"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/car_color2_img"
                    android:layout_margin="3dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/car_color2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/car_color3"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/myedtext_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/car_color3_img"
                    android:layout_margin="3dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/car_color3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <!-- 购买方式 -->


    <!-- 预计购车时间 -->


</LinearLayout>
